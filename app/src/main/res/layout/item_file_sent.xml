<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_gravity="right"
   android:id="@+id/file_lay"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:backgroundTint="@color/green_200"
    android:layout_alignParentRight="true"
    android:background="@color/colorPrimary"
    >



        <RelativeLayout
            android:id="@+id/file_root_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <ImageView
                android:id="@+id/file_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_play_bg"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_baseline_insert_drive_file_24" />

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/file_icon"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="4dp"
                android:text="File_20323232-15951.APK"
                android:textColor="@color/textColor"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_file_name"
                android:layout_toRightOf="@id/file_icon"
                android:text="2.3 MB"
                android:textColor="@color/textColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_file_extension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_file_name"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/tv_file_size"
                android:text="JPG"
                android:textColor="@color/textColor"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="35dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="02:30 AM"
                    android:textColor="@color/grey_40"
                    android:textSize="12sp" />

                <View
                    android:layout_width="@dimen/spacing_medium"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/seenStatus_file"
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="@dimen/spacing_large"
                    app:srcCompat="@drawable/ic_baseline_done_all_24"
                    app:tint="#42BDEE" />

            </LinearLayout>
        </RelativeLayout>
</LinearLayout>