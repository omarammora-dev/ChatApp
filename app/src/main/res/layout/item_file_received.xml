<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_gravity="left"
    android:gravity="left"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentRight="true"
    android:background="@drawable/receiver_message_lay"
    >



    <RelativeLayout
        android:id="@+id/file_root_container_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <ImageView
            android:id="@+id/file_icon_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_play_bg"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_baseline_insert_drive_file_24" />

        <TextView
            android:id="@+id/tv_file_name_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/file_icon_rec"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="4dp"
            android:text="File_20323232-15951.APK"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_file_size_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_file_name_rec"
            android:layout_toRightOf="@id/file_icon_rec"
            android:text="2.3 MB"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_file_extension_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_file_name_rec"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tv_file_size_rec"
            android:text="JPG"
            android:textColor="@color/black"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_file_name_rec"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/tv_time_file_rec"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="10:07 PM " />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>